<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".home">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="230dp"
        app:iss_auto_cycle="true"
        app:iss_delay="0"
        app:iss_period="1000"
        tools:ignore="MissingClass" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="110dp"
        android:text="@string/string_one"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center_horizontal"/>

    <TextView
        tools:ignore="MissingPrefix"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:text="@string/if_you_are_a_graduate_or_working_professional_then_you_start_your_training_with_us" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:textColor="@color/black"
        android:text="In terms of computer education and training, Unique ERP is known for excellence in quality and for consistently delivering result. Unique ERP is the top IT Institute in Faridabad that doesn't provide IT training but makes all the students stand in the market." />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="530dp"
        android:layout_marginRight="10dp"
        android:text="Unique ERP mainly provide IT-related courses and even being into Training and Development for about 5+ years, Unique ERP has evolved a variety of training modules in the verticals of Programming languages, Cloud Computing, Web design &amp; development, Hardware &amp; Networking, Windows / Linux administration, Data warehousing, ERPs, CRM, and Testing etc."
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:text="Here, students get knowledge about computer through programmer and training through our IT experts and we provide a guideline as well so that students can take the right decision for their career. Unique ERP mainly offers professional and specialized IT Training courses after graduation." />


</FrameLayout>